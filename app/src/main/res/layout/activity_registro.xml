<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBackground">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtUsuario_registro"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:inputType="text"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:hint="Usuario"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtContraseña_registro"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:inputType="textPassword"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:hint="Contraseña"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtNombre_registro"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:inputType="textCapWords"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:hint="Nombre"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtApPaterno_registro"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:inputType="textCapWords"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:hint="Apellido Paterno"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtApMaterno_registro"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:inputType="textCapWords"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:hint="Apellido Materno"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtEmail_registro"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:inputType="textEmailAddress"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/white"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:hint="Email"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnRegistrar_registro"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:onClick="onRegistrarClick"
            android:text="Registrar"/>

    </LinearLayout>
</ScrollView>